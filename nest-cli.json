{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "contexts/text/prompts/**/*.md",
        "outDir": "dist"
      },
      {
        "include": "contexts/image/prompts/**/*.md", 
        "outDir": "dist"
      },
      {
        "include": "contexts/video/prompts/**/*.md", 
        "outDir": "dist"
      }
      ,
      {
        "include": "contexts/influencer/prompts/**/*.md", 
        "outDir": "dist"
      }
    ]
  }
}
